<div class="card">
	<% if @user.image.present? %>
		<h4> <%= image_tag @user.image, style: 'width:100%;' %> </h4>
	<% end %>
	<h1> <%=@user.name%> </h1>
	<p class="title"><%=@user.email%> </p>
	<h4><%=@user.phone%> </h4>
	<p class="title"><%=@user.address%> </p>
</div>
<style>
.card {
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
  max-width: 60%;
  height: 200px;
  margin: auto;
  text-align: center;
  font-family: arial;
  margin-bottom: 50px;
}

.title {
  color: grey;
  font-size: 18px;
}

button {
  border: none;
  outline: 0;
  display: inline-block;
  padding: 8px;
  color: white;
  background-color: #000;
  text-align: center;
  cursor: pointer;
  width: 100%;
  font-size: 18px;
}

a {
  text-decoration: none;
  font-size: 22px;
  color: black;
}

button:hover, a:hover {
  opacity: 0.7;
}
</style>